<div class="row">     
    <div class="col-md-12">         
        <h2>{{employee.firstName}} {{ employee.lastName}} - Employee: {{employee.employeeNum}}</h2>         
        <hr />         
        <form method="post" action="/employee/update">
        <input type="hidden" name="employeeNum" value={{employee.employeeNum}}>             
            <fieldset>
                <legend><strong>Personal Information</strong></legend>                 
                    <div class="row">                     
                        <div class="col-md-6">                         
                            <div class="form-group">                             
                                <label for="firstName">First Name:</label>
                                <input class="form-control" id="firstName" name="firstName" type="text" value="{{employee.firstName}}" />
                            </div>                     
                        </div>                     
                        <div class="col-md-6">                         
                                <div class="form-group">                             
                                    <label for="lastName">Last Name:</label>                             
                                    <input class="form-control" id="lastName" name="lastName" type="text" value="{{employee.lastName}}" />                         
                                </div>                     
                        </div>
                        <div class="col-md-6">                         
                                <div class="form-group">                             
                                    <label for="employee_email">Email:</label>
                                    <input class="form-control" id="emil" name="email" type="email" value="{{employee.email}}" />
                                </div>                     
                        </div>
                        <div class="col-md-6">                         
                                <div class="form-group">                             
                                    <label for="Social Security Number">Social Security Number:</label>
                                    <input class="form-control" id="SSN" name="SSN" type="text" value="{{employee.SSN}}" />
                                </div>                     
                        </div>
                        <div class="col-md-3">                         
                                <div class="form-group">                             
                                    <label for="emp_street">Address (Street):</label>
                                    <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{employee.addressStreet}}" />
                                </div>                     
                        </div>
                        <div class="col-md-3">                         
                                <div class="form-group">                             
                                    <label for="emp_city">Address (City):</label>
                                    <input class="form-control" id="addressCity" name="addressCity" type="text" value="{{employee.addressCity}}" />
                                </div>                     
                        </div>
                        <div class="col-md-3">                         
                                <div class="form-group">                             
                                    <label for="emp_state">Address (State):</label>
                                    <input class="form-control" id="addressState" name="addressState" type="text" value="{{employee.addressState}}" />
                                </div>                     
                        </div>
                        <div class="col-md-3">                         
                                <div class="form-group">                             
                                    <label for="emp_zip">Address (Zip Code):</label>
                                    <input class="form-control" id="addressPostal" name="addressPostal" type="text" value="{{employee.addressPostal}}" />
                                </div>                     
                        </div>
                    </div>
            </fieldset>

            <fieldset>
                <legend><strong>Company Information</strong></legend>
                <div class="col-md-3">                         
                    <div class="form-group">                             
                        <label for="emp_manager">Manager:</label>
                        <br>
                        <input class="form-control" id="isManager" name="isManager" type="checkbox" {{#if employee.isManager}}checked{{/if}} />            
                    </div>                     
                </div>

                <div class="col-md-3">                         
                    <div class="form-group">                             
                        <label for="emp_managerNum">Employee's Manager Number:</label>
                        <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" type="text" value = "{{employee.employeeManagerNum}}" />            
                    </div>                     
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label for="Status">Status:</label><br>
                        <input class="checkbox-inline" id="fullTime" name="status" type="radio" value = "Full Time"
                                {{#equal employee.status "Full Time"}} checked {{/equal}}>
                        <label for="fullTime"> Full Time    </label>

                        <input class="checkbox-inline" id="partTime" name="status" type="radio" value = "Part Time"
                                {{#equal employee.status "Part Time"}} checked {{/equal}}>
                        <label for="partTime"> Part Time  </label>
                    </div>
                </div>
                
                <div class="col-md-3">
                        <div class="form-group">
                            <label for="department"> Department: </label>
                            <select class="form-control" name="department" id="department">
                                <option value="1" {{#equal employee.department "1"}} selected {{/equal}}> Creative Services </option>
                                <option value="2" {{#equal employee.department "2"}} selected {{/equal}}> Product Development </option>
                                <option value="3" {{#equal employee.department "3"}} selected {{/equal}}> Marketing </option>
                                <option value="4" {{#equal employee.department "4"}} selected {{/equal}}> Strategic Planning </option>
                                <option value="5" {{#equal employee.department "5"}} selected {{/equal}}> Accounting </option>
                                <option value="6" {{#equal employee.department "6"}} selected {{/equal}}> Human resources </option>
                                <option value="7" {{#equal employee.department "7"}} selected {{/equal}}> Quality Analysis </option>
                            </select>
                        </div>
                    </div>
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label> Hire Date: </label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" 
                                    value = "{{employee.hireDate}}" readonly>
                        </div>
                    </div>
                </div>
            </fieldset>
                        <hr /><input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
        </form>
    </div>
</div>

